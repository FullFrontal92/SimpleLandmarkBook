<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DetailActivity">

    <ImageView
            android:layout_width="300dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/imageView" app:layout_constraintVertical_bias="0.202" android:layout_marginTop="65dp"
            android:layout_marginBottom="67dp" app:layout_constraintBottom_toTopOf="@+id/textView"/>
    <TextView
            android:text="TextView"
            android:layout_width="329dp"
            android:layout_height="45dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView" android:textAlignment="center" android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginBottom="149dp" app:layout_constraintHorizontal_bias="0.509"/>
</android.support.constraint.ConstraintLayout>